---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Calculate the diminished value insurance companies are hiding from you using the industry-standard 17c Formula. Free, secure, and instant." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="diminished value calculator, 17c formula, car insurance claim, vehicle valuation, insurance settlement" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph / Social Media -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ValueGuard - 17c Diminished Value Calculator" />
    <meta property="og:description" content="Calculate what insurance companies don't want you to know using the 17c Formula" />
    <meta property="og:image" content="/og-image.png" />
    
    <title>{title}</title>
  </head>
  <body class="antialiased">
    <!-- Header -->
    <header class="border-b border-slate-800/50 backdrop-blur-sm bg-slate-950/80 sticky top-0 z-50">
      <div class="max-w-7xl mx-auto px-4 py-4">
        <div class="flex items-center justify-between">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-xl flex items-center justify-center shadow-lg shadow-blue-500/30">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
              </svg>
            </div>
            <div>
              <h1 class="text-xl font-bold text-white">ValueGuard</h1>
              <p class="text-xs text-gray-500">Diminished Value Calculator</p>
            </div>
          </div>
          
          <nav class="hidden md:flex items-center gap-6 text-sm">
            <a href="#calculator" class="text-gray-400 hover:text-white transition-colors">Calculator</a>
            <a href="#how-it-works" class="text-gray-400 hover:text-white transition-colors">How It Works</a>
            <a href="#faq" class="text-gray-400 hover:text-white transition-colors">FAQ</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer class="border-t border-slate-800/50 bg-slate-950/50 backdrop-blur-sm mt-20">
      <div class="max-w-7xl mx-auto px-4 py-12">
        <div class="grid grid-cols-1 md:grid-cols-4 gap-8 mb-8">
          <!-- Brand -->
          <div class="md:col-span-2">
            <div class="flex items-center gap-3 mb-4">
              <div class="w-10 h-10 bg-gradient-to-br from-blue-600 to-blue-800 rounded-xl flex items-center justify-center shadow-lg shadow-blue-500/30">
                <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
                </svg>
              </div>
              <span class="text-xl font-bold text-white">ValueGuard</span>
            </div>
            <p class="text-gray-400 text-sm max-w-md leading-relaxed">
              Empowering car owners to fight for fair insurance payouts using data-driven calculations and the industry-standard 17c Formula.
            </p>
          </div>

          <!-- Resources -->
          <div>
            <h3 class="text-white font-semibold mb-3 text-sm">Resources</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="https://www.kbb.com" target="_blank" class="text-gray-400 hover:text-blue-400 transition-colors">Kelley Blue Book</a></li>
              <li><a href="https://www.nada.com" target="_blank" class="text-gray-400 hover:text-blue-400 transition-colors">NADA Guides</a></li>
              <li><a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">17c Formula Guide</a></li>
              <li><a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">FAQ</a></li>
            </ul>
          </div>

          <!-- Legal -->
          <div>
            <h3 class="text-white font-semibold mb-3 text-sm">Legal</h3>
            <ul class="space-y-2 text-sm">
              <li><a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">Privacy Policy</a></li>
              <li><a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">Terms of Service</a></li>
              <li><a href="#" class="text-gray-400 hover:text-blue-400 transition-colors">Disclaimer</a></li>
            </ul>
          </div>
        </div>

        <!-- Bottom Bar -->
        <div class="border-t border-slate-800/50 pt-8">
          <div class="flex flex-col md:flex-row items-center justify-between gap-4">
            <p class="text-gray-500 text-sm">
              © 2026 ValueGuard. Built with <span class="text-blue-400">❤</span> for consumer rights.
            </p>
            <div class="flex items-center gap-6 text-sm text-gray-500">
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-green-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M2.166 4.999A11.954 11.954 0 0010 1.944 11.954 11.954 0 0017.834 5c.11.65.166 1.32.166 2.001 0 5.225-3.34 9.67-8 11.317C5.34 16.67 2 12.225 2 7c0-.682.057-1.35.166-2.001zm11.541 3.708a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                </svg>
                No data stored
              </span>
              <span class="flex items-center gap-2">
                <svg class="w-4 h-4 text-blue-500" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M5 9V7a5 5 0 0110 0v2a2 2 0 012 2v5a2 2 0 01-2 2H5a2 2 0 01-2-2v-5a2 2 0 012-2zm8-2v2H7V7a3 3 0 016 0z" clip-rule="evenodd" />
                </svg>
                100% Free
              </span>
            </div>
          </div>
        </div>
      </div>
    </footer>

    <style>
      @keyframes fadeIn {
        from {
          opacity: 0;
          transform: translateY(10px);
        }
        to {
          opacity: 1;
          transform: translateY(0);
        }
      }
      
      .animate-fadeIn {
        animation: fadeIn 0.4s ease-out;
      }
    </style>
  </body>
</html>
