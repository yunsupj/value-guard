---
import '../styles/global.css';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Calculate the diminished value insurance companies are hiding from you using the industry-standard 17c Formula. Free, secure, and instant." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="diminished value calculator, 17c formula, car insurance claim, vehicle valuation, insurance settlement" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:title" content="ValueGuard - 17c Diminished Value Calculator" />
    <meta property="og:description" content="Calculate what insurance companies don't want you to know" />
    
    <title>{title}</title>
  </head>
  <body>
    <!-- Header -->
    <header style="backdrop-filter: blur(16px); background: rgba(15, 23, 42, 0.8); border-bottom: 1px solid rgba(51, 65, 85, 0.5); position: sticky; top: 0; z-index: 50;">
      <div style="max-width: 80rem; margin: 0 auto; padding: 1.25rem 1.5rem;">
        <div style="display: flex; align-items: center; justify-content: space-between;">
          <div style="display: flex; align-items: center; gap: 0.875rem;">
            <div style="width: 2.75rem; height: 2.75rem; background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); border-radius: 1rem; display: flex; align-items: center; justify-content: center; box-shadow: 0 8px 20px rgba(37, 99, 235, 0.3);">
              <span style="font-size: 1.5rem;">ðŸ’Ž</span>
            </div>
            <div>
              <h1 style="font-size: 1.25rem; font-weight: 700; color: #ffffff; margin: 0;">ValueGuard</h1>
              <p style="font-size: 0.75rem; color: #94a3b8; margin: 0;">Diminished Value Calculator</p>
            </div>
          </div>
          
          <nav style="display: none; gap: 2rem; font-size: 0.875rem; font-weight: 500;">
            <a href="#calculator" style="color: #94a3b8; text-decoration: none; transition: color 0.2s;">Calculator</a>
            <a href="#how-it-works" style="color: #94a3b8; text-decoration: none; transition: color 0.2s;">How It Works</a>
            <a href="#faq" style="color: #94a3b8; text-decoration: none; transition: color 0.2s;">FAQ</a>
          </nav>
        </div>
      </div>
    </header>

    <!-- Main Content -->
    <main>
      <slot />
    </main>

    <!-- Footer -->
    <footer style="border-top: 1px solid rgba(51, 65, 85, 0.5); background: rgba(15, 23, 42, 0.5); backdrop-filter: blur(16px); margin-top: 5rem;">
      <div style="max-width: 80rem; margin: 0 auto; padding: 3rem 1.5rem;">
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 2.5rem; margin-bottom: 2.5rem;">
          <!-- Brand -->
          <div style="grid-column: span 2;">
            <div style="display: flex; align-items: center; gap: 0.875rem; margin-bottom: 1.25rem;">
              <div style="width: 2.75rem; height: 2.75rem; background: linear-gradient(135deg, #2563eb 0%, #1d4ed8 100%); border-radius: 1rem; display: flex; align-items: center; justify-content: center; box-shadow: 0 8px 20px rgba(37, 99, 235, 0.3);">
                <span style="font-size: 1.5rem;">ðŸ’Ž</span>
              </div>
              <span style="font-size: 1.25rem; font-weight: 700; color: #ffffff;">ValueGuard</span>
